import static org.junit.Assert.*;
import org.junit.Before;
import org.junit.Test;
import java.util.List;

public class TorreTest {

    private Tabuleiro tabuleiro;

    @Before
    public void setUp() {
        tabuleiro = new Tabuleiro();
    }

    @Test(timeout = 2000)
    public void deveMoverNaMesmaColuna() {
        Torre torre = new Torre(Cor.PRETO);
        tabuleiro.setPeca(0, 0, torre);
        List<Posicao> movimentos = torre.getMovimentosPossiveis(tabuleiro, 0, 0);
        assertTrue("Era para dar para mover para baixo na mesma coluna", movimentos.contains(new Posicao(1, 0)));
    }
}
